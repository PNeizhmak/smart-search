<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:/app-context-ds.xml"/>

    <bean id="userDao" class="com.db.dao.UserDaoImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="authService" class="com.auth.services.AuthServiceImpl">
        <property name="userDao" ref="userDao"/>
    </bean>

    <bean id="authController" class="com.auth.controller.AuthController">
        <property name="authService" ref="authService"/>
    </bean>
</beans>